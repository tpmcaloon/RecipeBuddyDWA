<!doctype html>
<html lang="en">
<head>
    <title>Update <%=shopName%></title>
    <link rel="stylesheet"  type="text/css" href="main.css" />
</head>
<body>
<style>
table#foodlist_table th {color:#fff;} 
table#foodlist_table tr:nth-child(even) { background-color: #1DB954; color:#fff;} 
table#foodlist_table tr:nth-child(odd) {color:#fff;} 
table#foodlist_table {margin-top: 20px; width: 70%; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-weight: 600; background-color: #303030; border-radius: 15px; margin-left: auto; margin-right: auto;}
</style>

<!-- Horizontal Navbar -->
<ul>
    <li><a href="./">Home</a></li>
    <li><a href="about">About <%=shopName%></a></li>
    <li></li>
    <li class="dropdown">
        <a class="active" href="javascript:void(0)" class="dropbtn">Food</a>
        <div class="dropdown-content">
        <a href="foodsearch">Search for Foods</a>
        <a href="foodadd">Add Food</a>
        <a href="foodlist">List Foods</a>
        <a href="foodupdate">Update Foods</a>
        <a href="foodhighprotein">High Protein Foods</a>
    <li class="dropdown">
        <a href="javascript:void(0)" class="dropbtn">Users</a>
        <div class="dropdown-content">
        <a href="userlist">List Users</a>
        <a href="userdelete">Delete Users</a>
    <li class="dropdown">
    <a href="javascript:void(0)" class="dropbtn">Account</a>
        <div class="dropdown-content">
        <a href="login">Login</a>
        <a href="logout">Logout</a>
    <li><a href="register">Register with us</a></li>
    </ul>
    <!-- Horizontal Navbar -->
    
    <h1>Update Food On <%=shopName%></h1>

    <!-- Table View of Foods -->
    <form style="width: fit-content; background-color: transparent;" method="POST" action="/foodupdated">
    <table id="foodlist_table"> 
        <tr>
            <th>Food Name</th>
            <th>Typical Values Per</th>
            <th>Unit</th>
            <th>Carbs</th>
            <th>Fat</th>
            <th>Protein</th>
            <th>Salt</th>
            <th>Sugar</th>
            <th>Add to Meal</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        <% availableFoods.forEach(function(food) { %>
            <tr style="text-align: center;">
            <td><input id="name" type="text" name="name" value="<%= food.FoodName %>" required/></td>
            <td><input id="typicalvaluesper" type="text" name="typicalvaluesper" value="<%= food.TypicalValuesPer %>" required/></td>
            <td><input id="unitofthetypicalvalue" type="text" name="unitofthetypicalvalue" value="<%= food.UnitOfTheTypicalValue %>" required/></td>
            <td><input id="carbs" type="text" name="carbs" value="<%= food.Carbs %>" required/></td>
            <td><input id="fat" type="text" name="fat" value="<%= food.Fat %>" required/></td>
            <td><input id="protein" type="text" name="protein" value="<%= food.Protein %>" required/></td>
            <td><input id="salt" type="text" name="salt" value="<%= food.Salt %>" required/></td>
            <td><input id="sugar" type="text" name="sugar" value="<%= food.Sugar %>" required/></td>
            <td><input type="checkbox" id="addToMeal" value="Add"></td>
            <td><button>Edit</button></td>
            <td><button>Delete</button></td>
            <% }) %>
        </tr>
    </table>
    </form>
    <!-- Table View of Foods -->
    
</body>
</html>