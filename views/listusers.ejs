<!doctype html>
<html lang="en">
    <head>
        <title>Welcome to <%=shopName%></title>
        <link rel="stylesheet"  type="text/css" href="main.css" />
    </head>
    <style>
        table#userlist_table tr:nth-child(even) { background-color:#dddddd;} 
        table#userlist_table {width: 100%; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;}
    </style>
    <body>
        <h1><%=shopName%> Shop</h1>
        <h2>Here are the users of <%=shopName%>:</h2>
        <ul>
            <% registeredUsers.forEach(function(user) { %>
                <li><%= user.Username %>, <%=user.FirstName %>, <%=user.LastName %>, <%=user.Email %></li>
                <% }) %>
            </ul>

            <!-- Table View of Users -->
            <table id="userlist_table">
                <tr>
                    <th>Username</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                </tr>
                <% registeredUsers.forEach(function(user) { %>
                <tr style="text-align: center;">
                    <td><%= user.Username %></td>
                    <td><%=user.FirstName %></td>
                    <td><%=user.LastName %></td>
                    <td><%=user.Email %></td>
                    <% }) %>
                </tr>
            </table>
        </body>
    </html>